<div class="container">

  <div class="jumbotron p-3 p-md-5 rounded bg-secondary text-white">
    <div class="col-sm-12 px-0">
      <h1>Custom Burgers!</h1>
      <hr />
        <h3>Create a new custom burger to the database!</h3>
        <hr />
  <form class="create-form">
          <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
          </div>

          <div class="form-group">
            <label for="devoured">Is the burger available?</label><br>
            <input type="radio" name="devoured" value="1" checked> Nope! Already devoured!<br>
            <input type="radio" name="devoured" value="0"> Yes! It's available!
          </div>

          <button type="submit">Add Burger</button>
        </form>
    

    </div>
  </div>


  <div class="row mb-2">
    <div class="col-md-6">
      <div class="card flex-md-row mb-4 shadow-sm h-md-250">
        <div class="card-body d-flex flex-column align-items-start">
          <h2>Burgers that are available</h2>

          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>


    <div class="col-md-6">
      <div class="card flex-md-row mb-4 shadow-sm h-md-250">
        <div class="card-body d-flex flex-column align-items-start">
          <h2>Burgers that are unavailable</h2>

          <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>

  </div>